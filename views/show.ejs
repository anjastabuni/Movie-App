<% layout('layout/app') %>

<div class="relative w-full h-screen flex items-center justify-center text-white group">
  <!-- Background Image with Hover Effect -->
  <div class="absolute inset-0 bg-cover bg-center brightness-50 blur-md transition-all duration-500 group-hover:blur-none group-hover:brightness-100" 
       style="background-image: url('https://image.tmdb.org/t/p/w1280<%= movie.backdrop_path %>')">
  </div>

  <!-- Movie Card -->
  <div class="relative bg-white/10 backdrop-blur-lg rounded-lg shadow-lg p-8 max-w-4xl w-full mx-6 transition-all duration-500 group-hover:bg-white/20 group-hover:backdrop-blur-md">
    <div class="flex flex-col md:flex-row items-center">
      <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>" 
           class="w-48 md:w-1/3 rounded-lg shadow-lg transition-transform duration-300 group-hover:scale-105" />
      
      <div class="md:ml-6 mt-6 md:mt-0">
        <h1 class="text-4xl font-bold"><%= movie.title %></h1>
        <p class="text-gray-300 mt-2">⭐ <%= movie.vote_average %> | 🗓 <%= movie.release_date %></p>
        <p class="mt-4 text-gray-200 leading-relaxed"><%= movie.overview %></p>

        <div class="mt-6 flex gap-4">
          <a href="/" class="bg-blue-600 hover:bg-blue-700 transition px-4 py-2 rounded text-white font-semibold"> Kembali </a>
          <form action="/favorit/<%= movie.id  %>" method="post">
            <button class="bg-yellow-500 hover:bg-yellow-600 transition px-4 py-2 rounded text-white font-semibold" type="submit">⭐ Tambah ke Favorit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
